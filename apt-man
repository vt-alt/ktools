#!/bin/bash -eu

[ ! -v MANPAGER ] && export MANPAGER="less -R --use-color -Dd+y -Du+c"

shopt -s nullglob extglob

: ${repo:=sisyphus}
: ${arch:=$HOSTTYPE}

CACHE=$HOME/.cache/apt-man
PAGES=$CACHE/man-$repo-$arch

addtab=
wordsep='.*'
unset update
for opt; do
	shift
	case "$opt" in
		--update) update=y ;;
		-p) addtab=$'\t' ;;
		-w|-x) wordsep='\b' ;&
		-*) set -- "$@" "$opt" ;;
		*) pat=$opt ;;
	esac
done

if [ -v update ] || [ -z "$(find "$PAGES" -type f -ctime -7 2>/dev/null)" ]; then
	mkdir -p "$CACHE"
	gum spin --show-output -s minidot --title="Downloading..." -- cat /ALT/"$repo"/{"$arch",noarch}/base/contents_index \
	| grep  -e '^/usr/share/.*/man' \
		-e '^/usr/lib/.*man/man[[:digit:]].*\.[[:digit:]]' \
		-e '^/usr/share/doc/.*/.*\(HOWTO\|README\|txt\|md\|rst\)' \
	| grep -E -v 'LICEN[CS]E|COPYING|AUTHOR|CHANGE[SL]|NEWS|CREDITS|CONTRIB|TODO|INSTALL|SECURITY' > "$PAGES-"
	mv -f "$PAGES-" "$PAGES"
	[ -v pat ] || exit
fi

if [ -v LESS ]; then
	# Unset --quit-if-one-screen
	LESS=${LESS/F}
fi
line_no=$(mktemp) && trap "rm $line_no" EXIT
while true; do
	[ -s "$line_no" ] && read -r pos <"$line_no" || pos=1
	label=$(grep -e "^/usr/.*/man.*$addtab$wordsep$pat" \
		     -e "^/usr/share/doc/$addtab$wordsep$pat" "$@" "$PAGES" \
		| fzf --height=~100% \
			--bind 'focus:execute-silent:echo $(({n}+1)) >'"$line_no" \
			--bind "load:pos:$pos")
	read file pkgname <<<$label
	for a in $arch noarch; do
		dir=/ALT/$repo/files/$a/RPMS
		pkg=( "$dir"/"$pkgname"-+([^-])-alt*."$a".rpm )
		[[ $file =~ /man ]] && viewer=man || viewer=bat
		if [ -v pkg ]; then
			rpmpeek "$pkg" "$viewer" ".$file"
		fi
	done
done
