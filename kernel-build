#!/bin/bash -efu

V() { echo -e "+ \e[1;33m$@\e[m" >&2; "$@"; }

unset shared kernelbot task disapprove
force=
kmodules=y
runthetask=y
commit=--test-only
push_branch=y
for opt do
	shift
	case "$opt" in
		--kernelbot) kernelbot=y ;;
		-f | --force) force="-f" ;;
		--task=*) task="${opt#*=}" ;;
		--commit) commit=--commit kernelbot=y ;;
		--share*) shared=y ;;
		--branch=*) branch="${opt#*=}" ;;
		--no-kmodules) unset kmodules ;;
		--no-run) unset runthetask ;;
		--disapprove) disapprove=y ;;
		--no-branch) unset push_branch ;;
		*) set -- "$opt" "$@"; break ;; # tags
	esac
done

if [ -v kernelbot ]; then
	remote=kernelbot
	repo=/people/kernelbot/packages/kernel-image
	approver=girarbot
else
	remote=gitery
	repo=kernel-image
	approver=girar
fi
br=$(git branch --show-current)
[ -n "${branch-}" ] || branch=${br#*/}
case $branch in
	sisyphus | [cp][1-9]* | icarus* ) ;;
	*) echo >&2 "Invalid repo $branch"; exit 1 ;;
esac
brflvr=${br%/*}
case $brflvr in
	un-def|std-def|std-pae|std-debug|std-next|un-next|next|rt) ;;
	*) echo >&2 "Invalid flavour $brflvr"; exit 1 ;;
esac

# Set tags to build.
if [ "$*" ]; then
	set "$@"
else
	set -- $(git tag --points-at @)
fi
[ -v push_branch ] && V git push $remote $br $force
for tag; do
	flavour=${tag#kernel-image-}
	flavour=${flavour%-*-alt*}

	V git push $remote $tag $force
	[ -v task ] || task=$(V ssh -n girar task new $branch)
	V ssh -n girar task add $task repo $repo $tag
	[ -v shared ] && V ssh -n girar task share $task enable
	if [ -v kmodules ] && V ssh -n girar task add $task kmodules $flavour; then
		msg="-m kmodules:$tag"
	else
		msg=
	fi
	if [ -v disapprove ]; then
		echo TEST | V ssh girar task disapprove $task all
	else
		echo PESIGN | V ssh $approver task approve $task all
	fi
	runcmd="ssh -n girar task run --fail-late $commit $task $msg"
	if [ -v runthetask ]; then
		V $runcmd
	else
		echo -e "To run: \e[1;35m$runcmd\e[m"
	fi
done

